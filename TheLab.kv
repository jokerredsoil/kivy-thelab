
GridLayoutExample:

<GridLayoutExample@GridLayout>:
    #rows
    #cols
    cols:3
    Button:
        text:"A"
        size_hint: none,1
        width:60dp

    BoxLayoutExample
    Button:
        text:"C"
    Button:
        text:"D"
    Button:
        text:"E"
    Button:
        text:"F"    

<AnchorLayoutExample>:
    #right,left,center
    anchor_x:"center"
    #bottom,top,center
    #anchor_y:"top"
    BoxLayout:
        size_hint: .2 , .2
        Button:
            text: "A"
            
        Button:
            text: "B"
            

<BoxLayoutExample>:
    orientation:"horizontal"
    Button: 
        text : "A"
        
       #Sizing
        #change size in kv file using size_hint= 1= 100%
        #size: "100dp", "60dp"
        #bisa pake width dan height 
        #width: "100dp"
        #height: "100dp"
        size_hint: 1,1
       
       #Positioning
        #pilih salah satu dari set di bawah kalau x,y kalau center_x,center_y
        #x,center_x,right(0-1)
        #y,center_y,top(0-1)
        
        pos_hint:{"x":.2}
    BoxLayout:
        orientation:"vertical"
        spacing:"10dp"
        Button: 
            text : "a1"
        Button: 
            text : "a1"
        Button: 
            text : "a1"
        Button: 
            text : "a1"
        Button: 
            text : "a1"
    Label: 
        text : "C"    
        

<MainWidget>:
    Button:
        
        text: "Hello"
        size : "40dp","40dp"
        pos: "100dp","200dp"
    Label:
        text: "This is label"
        size : "200dp", "100dp"
        pos : "200dp","300dp"
        color : 0,100,100,0.5